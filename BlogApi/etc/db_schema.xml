<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="custom_blog" resource="default" engine="innodb" comment="Blog Table">

        <!-- Primary Key -->
        <column xsi:type="int" name="post_id" unsigned="true" nullable="false" identity="true" comment="Post ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="post_id"/>
        </constraint>
        <column xsi:type="varchar" name="title" nullable="true" length="255" comment="Title"/>
        <column xsi:type="varchar" name="page_layout" nullable="true" length="255" comment="Page Layout"/>
        <column xsi:type="smallint" name="is_active"   nullable="false" default="1" comment="Is Active (1=yes,0=no)"/>
        <column xsi:type="varchar" name="meta_title" nullable="true" length="255" comment="Blog Meta Title"/>
        <column xsi:type="text" name="meta_keywords" nullable="true" comment="Blog Meta Keywords"/>
        <column xsi:type="text" name="meta_description" nullable="true" comment="Blog Meta Description"/>
        <column xsi:type="varchar" name="identifier" nullable="false" length="255" comment="Url Identifier"/>
        <column xsi:type="varchar" name="content_heading" nullable="true" length="255" comment="Content Heading"/>
        <column xsi:type="text" name="content" nullable="true" comment="Content"/>
        <!-- System Timestamps -->
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true"  comment="Updated At"/>

        <constraint xsi:type="unique" referenceId="BLOG_IDENTIFIER_UNIQUE">
            <column name="identifier"/>
        </constraint>

        <index referenceId="BLOG_POST_TITLE_META_KEYWORDS_META_DESCRIPTION_IDENTIFIER_CONTENT" indexType="fulltext">
            <column name="title"/>
            <column name="meta_keywords"/>
            <column name="meta_description"/>
            <column name="identifier"/>
            <column name="content"/>
        </index>

    </table>
</schema>
