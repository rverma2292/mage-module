<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/blog/post" method="POST">
        <service class="Advik\BlogApi\Api\BlogRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/blog/post/:blogId" method="PUT">
        <service class="Advik\BlogApi\Api\BlogRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/blog/post/:blogId" method="GET">
        <service class="Advik\BlogApi\Api\BlogRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/blog/post/search" method="GET">
        <service class="Advik\BlogApi\Api\BlogRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/blog/post/:blogId" method="DELETE">
        <service class="Advik\BlogApi\Api\BlogRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

</routes>
