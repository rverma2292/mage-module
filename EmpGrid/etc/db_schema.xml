<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="employee" resource="default" engine="innodb" comment="Employee Table">

        <!-- Primary Key -->
        <column xsi:type="int" name="employee_id" unsigned="true" nullable="false" identity="true" comment="Employee ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="employee_id"/>
        </constraint>

        <!-- Basic Info -->
        <column xsi:type="varchar" name="first_name" nullable="false" length="100" comment="First Name"/>
        <column xsi:type="varchar" name="last_name"  nullable="false" length="100" comment="Last Name"/>
        <column xsi:type="varchar" name="email"      nullable="false" length="150" comment="Email"/>
        <column xsi:type="varchar" name="phone"      nullable="true"  length="20"  comment="Phone Number"/>

        <!-- Select / Radio -->
        <column xsi:type="varchar" name="gender" nullable="true" length="10" comment="Gender (male/female/other)"/>
        <column xsi:type="date"    name="dob"    nullable="true" comment="Date of Birth"/>
        <column xsi:type="varchar" name="marital_status" nullable="true" length="20" comment="Marital Status"/>

        <!-- Multi-select / Checkbox -->
        <column xsi:type="text" name="skills" nullable="true" comment="Skills JSON"/>

        <!-- Address Fields -->
        <column xsi:type="varchar" name="address_line1" nullable="true" length="255" comment="Address Line 1"/>
        <column xsi:type="varchar" name="address_line2" nullable="true" length="255" comment="Address Line 2"/>
        <column xsi:type="varchar" name="city"         nullable="true" length="100" comment="City"/>
        <column xsi:type="varchar" name="state"        nullable="true" length="100" comment="State"/>
        <column xsi:type="varchar" name="country"      nullable="true" length="100" comment="Country"/>
        <column xsi:type="varchar" name="zip_code"     nullable="true" length="20"  comment="Zip Code"/>

        <!-- Department / Job -->
        <column xsi:type="int"    name="department_id" nullable="true" comment="Department ID"/>
        <column xsi:type="varchar" name="designation"  nullable="true" length="100" comment="Designation"/>
        <column xsi:type="decimal" name="salary"       precision="12" scale="2" nullable="true" comment="Salary"/>
        <column xsi:type="date"    name="joining_date" nullable="true" comment="Joining Date"/>
        <column xsi:type="smallint" name="is_active"   nullable="false" default="1" comment="Is Active (1=yes,0=no)"/>

        <!-- File Uploads -->
        <column xsi:type="varchar" name="profile_photo" nullable="true" length="255" comment="Profile Photo Path"/>
        <column xsi:type="varchar" name="resume_file"   nullable="true" length="255" comment="Resume File Path"/>

        <!-- Extra JSON for dynamic fields -->
        <column xsi:type="text" name="extra_meta" nullable="true" comment="Extra Meta JSON"/>

        <!-- System Timestamps -->
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true"  comment="Updated At"/>

        <constraint xsi:type="unique" referenceId="EMPLOYEE_EMAIL">
            <column name="email"/>
        </constraint>

    </table>
</schema>
