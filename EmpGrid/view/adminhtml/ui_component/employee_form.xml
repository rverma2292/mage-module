<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">employee_form.employee_form_data_source</item>
            <item name="deps" xsi:type="string">employee_form.employee_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Employee Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">employee_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <settings>
        <buttons>
            <button name="save" class="Advik\EmpGrid\Block\Adminhtml\Page\Edit\SaveButton"/>
            <button name="delete" class="Advik\EmpGrid\Block\Adminhtml\Page\Edit\DeleteButton"/>
            <button name="reset" class="Advik\EmpGrid\Block\Adminhtml\Page\Edit\ResetButton"/>
            <button name="back" class="Advik\EmpGrid\Block\Adminhtml\Page\Edit\BackButton"/>
        </buttons>
        <namespace>employee_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>employee_form.employee_form_data_source</dep>
        </deps>
    </settings>

    <dataSource name="employee_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Advik\EmpGrid\Model\DataProvider</argument>
            <argument name="name" xsi:type="string">employee_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">employee_id</argument>
            <argument name="requestFieldName" xsi:type="string">employee_id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="employee/index/save"/>
        <!--<validateUrl path="path/to/validate_form_data_controller"/>-->
        </settings>
    </dataSource>

    <fieldset name="employee_details">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">Employee Details</item>
                <item name="sortOrder" xsi:type="number">10</item>
            </item>
        </argument>

        <!-- Basic Info
        <field name="employee_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Employee ID</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">employee_id</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                </item>
            </argument>
        </field>
         -->
        <field name="first_name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">First Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">first_name</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                </item>
            </argument>
        </field>

        <field name="last_name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Last Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">last_name</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                </item>
            </argument>
        </field>

        <field name="email">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Email Address</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">email</item>
                    <item name="sortOrder" xsi:type="number">40</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-email" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="phone">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Phone Number</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">phone</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                    <!--<item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-number" xsi:type="boolean">true</item>
                        <item name="min_text_length" xsi:type="number">10</item>
                        <item name="max_text_length" xsi:type="number">15</item>
                    </item>-->
                </item>
            </argument>
        </field>

        <!-- Gender -->
        <field name="gender">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">gender</item>
                    <item name="label" xsi:type="string" translate="true">Gender</item>
                    <item name="sortOrder" xsi:type="number">60</item>
                    <item name="options" xsi:type="array">
                        <item name="0" xsi:type="array"><item name="label" xsi:type="string">Male</item><item name="value" xsi:type="string">male</item></item>
                        <item name="1" xsi:type="array"><item name="label" xsi:type="string">Female</item><item name="value" xsi:type="string">female</item></item>
                        <item name="2" xsi:type="array"><item name="label" xsi:type="string">Other</item><item name="value" xsi:type="string">other</item></item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="dob">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">dob</item>
                    <item name="label" xsi:type="string" translate="true">Date of Birth</item>
                    <item name="sortOrder" xsi:type="number">70</item>
                    <item name="options" xsi:type="array">
                        <item name="dateFormat" xsi:type="string">yyyy-MM-dd</item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="marital_status">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">marital_status</item>
                    <item name="label" xsi:type="string" translate="true">Marital Status</item>
                    <item name="sortOrder" xsi:type="number">80</item>
                    <item name="options" xsi:type="array">
                        <item name="0" xsi:type="array"><item name="label" xsi:type="string">Single</item><item name="value" xsi:type="string">single</item></item>
                        <item name="1" xsi:type="array"><item name="label" xsi:type="string">Married</item><item name="value" xsi:type="string">married</item></item>
                        <item name="2" xsi:type="array"><item name="label" xsi:type="string">Divorced</item><item name="value" xsi:type="string">divorced</item></item>
                        <item name="3" xsi:type="array"><item name="label" xsi:type="string">Widowed</item><item name="value" xsi:type="string">widowed</item></item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="skills">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">skills</item>
                    <item name="label" xsi:type="string" translate="true">Skills</item>
                    <item name="sortOrder" xsi:type="number">90</item>
                    <item name="multiple" xsi:type="boolean">true</item>
                    <!--<item name="options" xsi:type="object">Advik\EmpGrid\Model\Employee\Source\Skills</item>-->

                    <item name="options" xsi:type="array">
                        <item name="0" xsi:type="array"><item name="label" xsi:type="string">PHP</item><item name="value" xsi:type="string">php</item></item>
                        <item name="1" xsi:type="array"><item name="label" xsi:type="string">JavaScript</item><item name="value" xsi:type="string">javascript</item></item>
                        <item name="2" xsi:type="array"><item name="label" xsi:type="string">HTML</item><item name="value" xsi:type="string">html</item></item>
                        <item name="3" xsi:type="array"><item name="label" xsi:type="string">CSS</item><item name="value" xsi:type="string">css</item></item>
                        <item name="4" xsi:type="array"><item name="label" xsi:type="string">Magento</item><item name="value" xsi:type="string">magento</item></item>
                        <item name="5" xsi:type="array"><item name="label" xsi:type="string">Laravel</item><item name="value" xsi:type="string">laravel</item></item>
                    </item>

                </item>
            </argument>
        </field>

        <!-- Address -->
        <field name="address_line1">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">address_line1</item>
                    <item name="label" xsi:type="string" translate="true">Address Line 1</item>
                    <item name="sortOrder" xsi:type="number">100</item>
                </item>
            </argument>
        </field>

        <field name="address_line2">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">address_line2</item>
                    <item name="label" xsi:type="string" translate="true">Address Line 2</item>
                    <item name="sortOrder" xsi:type="number">110</item>
                </item>
            </argument>
        </field>

        <field name="country">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Country</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">country</item>
                    <item name="sortOrder" xsi:type="number">120</item>
                </item>
            </argument>
        </field>

        <field name="state">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">State</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">state</item>
                    <item name="sortOrder" xsi:type="number">130</item>
                </item>
            </argument>
        </field>

        <field name="city">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">City</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">city</item>
                    <item name="sortOrder" xsi:type="number">140</item>
                </item>
            </argument>
        </field>

        <field name="zip_code">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">zip_code</item>
                    <item name="label" xsi:type="string" translate="true">Zip Code</item>
                    <item name="sortOrder" xsi:type="number">150</item>
                </item>
            </argument>
        </field>

        <!-- Department, Designation, Salary -->
        <field name="department_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="array">
                    <item name="0" xsi:type="array"><item name="label" xsi:type="string">-- Select Department --</item><item name="value" xsi:type="string"></item></item>
                    <item name="1" xsi:type="array"><item name="label" xsi:type="string">HR</item><item name="value" xsi:type="string">1</item></item>
                    <item name="2" xsi:type="array"><item name="label" xsi:type="string">Finance</item><item name="value" xsi:type="string">2</item></item>
                    <item name="3" xsi:type="array"><item name="label" xsi:type="string">IT</item><item name="value" xsi:type="string">3</item></item>
                    <item name="4" xsi:type="array"><item name="label" xsi:type="string">Operations</item><item name="value" xsi:type="string">4</item></item>
                </item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Department</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">department_id</item>
                    <item name="sortOrder" xsi:type="number">160</item>
                </item>
            </argument>
        </field>

        <field name="designation">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="array">
                    <item name="0" xsi:type="array"><item name="label" xsi:type="string">-- Select Designation --</item><item name="value" xsi:type="string"></item></item>
                    <item name="1" xsi:type="array"><item name="label" xsi:type="string">Manager</item><item name="value" xsi:type="string">manager</item></item>
                    <item name="2" xsi:type="array"><item name="label" xsi:type="string">Executive</item><item name="value" xsi:type="string">executive</item></item>
                    <item name="3" xsi:type="array"><item name="label" xsi:type="string">Supervisor</item><item name="value" xsi:type="string">supervisor</item></item>
                    <item name="4" xsi:type="array"><item name="label" xsi:type="string">Assistant</item><item name="value" xsi:type="string">assistant</item></item>
                </item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Designation</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">designation</item>
                    <item name="sortOrder" xsi:type="number">170</item>
                </item>
            </argument>
        </field>

        <field name="salary">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Salary</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">salary</item>
                    <item name="sortOrder" xsi:type="number">180</item>
                </item>
            </argument>
        </field>

        <field name="joining_date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="label" xsi:type="string" translate="true">Joining Date</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">joining_date</item>
                    <item name="sortOrder" xsi:type="number">190</item>
                    <item name="options" xsi:type="array">
                        <item name="dateFormat" xsi:type="string">yyyy-MM-dd</item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="is_active">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="array">
                    <item name="0" xsi:type="array"><item name="label" xsi:type="string">Yes</item><item name="value" xsi:type="number">1</item></item>
                    <item name="1" xsi:type="array"><item name="label" xsi:type="string">No</item><item name="value" xsi:type="number">0</item></item>
                </item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Is Active</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">is_active</item>
                    <item name="sortOrder" xsi:type="number">200</item>
                </item>
            </argument>
        </field>

        <field name="profile_photo">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">fileUploader</item>
                    <item name="label" xsi:type="string" translate="true">Profile Photo</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">profile_photo</item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="employee/index/upload"/>
                    </item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="sortOrder" xsi:type="number">210</item>
                </item>
            </argument>
        </field>

        <field name="resume_file">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">fileUploader</item>
                    <item name="label" xsi:type="string" translate="true">Resume File</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">resume_file</item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="employee/index/upload"/>
                    </item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="sortOrder" xsi:type="number">220</item>
                </item>
            </argument>
        </field>

        <field name="extra_meta">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="label" xsi:type="string" translate="true">Extra Meta JSON</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">extra_meta</item>
                    <item name="rows" xsi:type="number">5</item>
                    <item name="sortOrder" xsi:type="number">230</item>
                </item>
            </argument>
        </field>

    </fieldset>
</form>
